<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:left_margin="5vp"
    ohos:orientation="vertical"
    ohos:right_margin="5vp">


    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#fffffff"
        ohos:orientation="vertical"

        >

        <Text
            ohos:id="$+id:text_title"
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:bottom_margin="2vp"
            ohos:text="提示"
            ohos:text_alignment="center"
            ohos:text_size="20fp"
            ></Text>

        <Text
            ohos:id="$+id:error_tip_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:left_margin="20vp"
            ohos:right_margin="20vp"
            ohos:text="错误"
            ohos:text_alignment="center"
            ohos:text_color="red"
            ohos:text_size="15fp"
            ohos:visibility="invisible"/>

        <TextField
            ohos:id="$+id:field_input"
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:background_element="$graphic:background_field_input"
            ohos:bottom_margin="10vp"
            ohos:hint="请输入"
            ohos:left_margin="20vp"
            ohos:right_margin="20vp"
            ohos:left_padding="10vp"
            ohos:text_alignment="vertical_center"
            ohos:text_color="#000000"
            ohos:text_size="20fp"
            >
        </TextField>


        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="#ffffff"
            ohos:bottom_margin="20vp"
            ohos:bottom_padding="5vp"
            ohos:layout_alignment="center"
            ohos:orientation="horizontal"
            ohos:top_margin="20vp"
            ohos:top_padding="5vp"
            >

            <Button
                ohos:id="$+id:btn_cancel"
                ohos:height="45vp"
                ohos:width="0vp"
                ohos:background_element="$graphic:button_confirm_dialog_cancel"
                ohos:left_margin="20vp"
                ohos:right_margin="10vp"
                ohos:text="取消"
                ohos:text_color="#D0BE76"
                ohos:text_size="15fp"

                ohos:weight="1"
                >

            </Button>

            <Button
                ohos:id="$+id:btn_ok"
                ohos:height="45vp"
                ohos:width="0vp"
                ohos:background_element="$graphic:button_confirm_dialog_ok"
                ohos:left_margin="10vp"
                ohos:right_margin="20vp"
                ohos:text="确定"
                ohos:text_color="#DCC8A1"
                ohos:text_size="15fp"
                ohos:weight="1"
                >

            </Button>
        </DirectionalLayout>
    </DirectionalLayout>

</DirectionalLayout>